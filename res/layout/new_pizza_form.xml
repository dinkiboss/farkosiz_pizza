<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/new_pizza_form"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:orientation="vertical" >

  <include layout="@layout/form_size_selector" />
  
  <TextView 
    android:id="@+id/qty_header" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:padding="@dimen/subheading_padding"
    android:text="@string/quantity"
    android:background="@color/green"
    android:textColor="@color/black"
    android:textStyle="bold" />
  <LinearLayout
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
  <Button
    android:id="@+id/quantity_less"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:textStyle="bold"
    android:gravity="center"
    android:text="  -  "
    />
  <EditText 
    android:id="@+id/pizzaQuantity"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="1"
    android:numeric="integer"
    android:textStyle="bold"
    />
    <Button
    android:id="@+id/quantity_more"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:textStyle="bold"
    android:gravity="center"
    android:text="  +  "
    />
    </LinearLayout>
  <include layout="@layout/form_crust_type" />
  
  
  <TextView 
    android:id="@+id/topping_header" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:padding="@dimen/subheading_padding"
    android:text="@string/toppings"
    android:background="@color/green"
    android:textColor="@color/black"
    android:textStyle="bold" />
  <TextView
    android:id="@+id/topping_subheader"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/subheading_padding"
    android:text="Click topping to cycle through placement options"
    android:background="@color/green"
    android:textColor="@color/black"
    />

</LinearLayout>