<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/pizza_header"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/subheading_padding"
	android:paddingBottom="0dip"
	android:background="@color/purple"	>
		
				<TextView
          android:id="@+id/pizza_title"
   				android:text="@string/item"
   				android:textSize="@dimen/heading_one_size"
   				android:textColor="@color/white"
   				android:layout_width="wrap_content"
 					android:layout_height="wrap_content"
   				android:layout_alignParentLeft="true"
   				android:padding="@dimen/subheading_padding"
   				android:paddingLeft="@dimen/button_padding"
    			/>
    
  			<ImageButton
					android:id="@+id/edit_button"
					android:src="@drawable/b_edit_n"
					android:background="@layout/w_o_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:layout_toLeftOf="@+id/vertical_div"
					android:padding="@dimen/button_padding"
				/>
				
				<View
				  android:id="@+id/vertical_div"
				  android:orientation="horizontal"
				  android:layout_width="1dip"
				  android:layout_height="42dip"
				  android:layout_toLeftOf="@+id/cancel_button_bw"
				  android:background="@color/black" />
				
				<ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
					android:id="@+id/cancel_button_bw"
					android:src="@drawable/b_cancel_n"
					android:background="@layout/w_o_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:padding="@dimen/button_padding"
				/>
				<!-- 
				<View xmlns:android="http://schemas.android.com/apk/res/android"
				  android:id="@+id/horizontal_div"
				  android:layout_width="fill_parent"
				  android:layout_height="1dip"
				  android:layout_alignParentBottom="true"
				  android:background="#55000000"
				  android:layout_marginLeft="5dip"
				  android:layout_marginRight="5dip" />-->
      		
	
</RelativeLayout>
