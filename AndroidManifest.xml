<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="farkosizPizza.OrderCenter"
      android:versionCode="1"
      android:versionName="1.0" 
      >
    <application 
      android:icon="@drawable/icon" 
      android:label="@string/app_name"
      android:theme="@android:style/Theme.NoTitleBar"
      >
    
        <activity android:name=".Dashboard"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".NewPizza"
                  android:label="@string/new_pizza">
             <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category android:name="android.intent.category.LAUNCH" />
             </intent-filter>
        </activity>
        <activity android:name=".OrderList"
                  android:label="@string/order_view">
             <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category android:name="android.intent.category.LAUNCH" />
             </intent-filter>
        </activity>
        <activity
          android:name=".RecentPizzas"
          android:label="@string/recent_pizzas">
          <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCH" />
          </intent-filter>
        </activity>
    </application>
</manifest> 